apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: locust-master
spec:
  selector:
    matchLabels:
      app: locust-master
  template:
    metadata:
      labels:
        app: locust-master
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: locust-role
                    operator: In
                    values:
                      - master
      containers:
        - name:  openpai-locust
          image: albafica/openpai-locust
          imagePullPolicy: Always
          command:
            - "locust"
            - "-H"
            - "{{ env['cfg']['target-url'] }}"
            - "-f"
            - "/src/stresstest/{{ env['cfg']['stress-test-script'] }}"
            - "--master"
          ports:
            - name: master-port
              containerPort: 8089
              hostPort: 8089
