apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: locust-master
spec:
  selector:
    matchLabels:
      app: locust-master
  template:
    metadata:
      labels:
        app: locust-master
    spec:
      hostNetwork: true
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: locust-role
                    operator: In
                    values:
                      - master
      containers:
        - name:  openpai-locust
          image: albafica/locust
          imagePullPolicy: Always
          volumeMounts:
            - mountPath: /mnt/locust
              name: locust-script
          env:
            - name: LOCUST_MODE
              value: "master"
            - name: LOCUSTFILE_PATH
              value: "/mnt/locust/{{ env['cfg']['stress-test-script'] }}"
            - name: PAI_TOKEN
              value: "{{{{ env['cfg']['pai-token'] }}}}"
            - name: TARGET_URL
              value: "{{ env['cfg']['target-url'] }}"
            - name: MY_POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
      volumes:
      - name: locust-script
        configMap:
          name: locust-script-configuration
      serviceAccountName: locust-account


