apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: locust-slaver
spec:
  selector:
    matchLabels:
      app: locust-slaver
  template:
    metadata:
      labels:
        app: locust-slaver
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: locust-role
                    operator: In
                    values:
                      - master
      containers:
      - name:  openpai-locust
        image: albafica/openpai-locust
        imagePullPolicy: Always
        command:
        - "locust"
        - "-H"
        - "{{ env['cfg']['target-url'] }}"
        - "-f"
        - "/src/stresstest/{{ env['cfg']['stress-test-script'] }}"
        - "--slave"
        - "--master-host"
        - "{{ env['cfg']['master-url'] }}"